{% extends 'base.html.twig' %}

{% block title %}Créer un transporteur
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col-12 text-center">
				<h1>Créer un transporteur</h1>
			</div>
			<div class="card bg-dark col-10 col-md-9 col-lg-6 mx-auto text-center">
				{{ form_start(carrierForm)}}<br>
				{{ form_row(carrierForm.name)}}<br>
				<button type="submit" class="btn btn-primary btn-lg">Créer</button>
				{{ form_end(carrierForm)}}
			</div>
		</div>
	</section>
{% endblock %}
